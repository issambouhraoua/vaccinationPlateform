
{% block stylesheets %}
        <link href="{{ asset("vendor/fontawesome-free/css/all.min.css") }}" rel="stylesheet" type="text/css">
        <link
            href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
            rel="stylesheet">
    
        <!-- Custom styles for this template-->
        <link href="{{ asset("css/patient.css") }}" rel="stylesheet">
        {% endblock %}

        
{% block body %}
<h1 class="title">Voici votre résumé de vaccination</h1>
<div class="container" >
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    
    
</div>
    <table class="styled-table">
        <thead>
            <tr>
            
                <th>Vaccin</th>
                <th>Statut</th>
                <th>Date_vaccination</th>
                <th>Centre de vaccination</th>
            </tr>
        </thead>
        <tbody>
        {% for vaccination in vaccinations %}
            <tr>
              
                <td>{{ vaccination.vaccin }}</td>
                <td>{{ vaccination.statut }}</td>
                <td>{{ vaccination.dateVaccination ? vaccination.dateVaccination|date('Y-m-d') : '' }}</td>
                <td>{{ vaccination.centreVaccination}}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
